<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/imgtatto"
    android:padding="60dp"
    tools:context=".PrincipalActivity">


    <Button
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/b1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="AGENDA"
        android:layout_alignParentLeft="true"
        android:textSize="12dp"
        android:onClick="btnAgnda"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/btnmenu"
        android:onClick="btnExpositores"
        android:textSize="12dp"
        android:text="EXPOSITORES"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:textSize="12dp"
        android:backgroundTint="@color/btnmenu"
        android:onClick="btnLugar"
        android:text="LUGARES"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <Button
        android:id="@+id/b4"

        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="CALIFICANOS"
        android:onClick="btnCalificanos"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:layout_below="@id/b2"
        android:layout_centerInParent="true"/>
</RelativeLayout>